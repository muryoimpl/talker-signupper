-# frozen_string_literal: true
!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
    %title TalkerSignupper
    = csrf_meta_tags
    = action_cable_meta_tag
    = stylesheet_link_tag    'application', media: 'all'
    = stylesheet_link_tag    'https://fonts.googleapis.com/css?family=Roboto:regular,bold,italic,thin,light,bolditalic,black,medium&amp;lang=ja'
    = stylesheet_link_tag    'https://fonts.googleapis.com/icon?family=Material+Icons', media: 'all'
    = javascript_include_tag 'application'
  %body
    .mdl-layout__container
      .mdl-layout.mdl-js-layout.mdl-layout--fixed-header
        = yield

    %footer.mdl-mega-footer
      - if Rails.env.production?
        = render 'rooms/banner'
      %p.tac{style: 'margin-bottom: 0'} Copyright &copy; 2018 muryoimpl
